@model Burgerama.Web.Maintenance.Models.Ratings.CreateContextModel
<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>

@using (Html.BeginForm("CreateContext", "Ratings", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="row">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.ContextKey, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.ContextKey, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ContextKey, "")
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.GracefullyHandleUnknownCandidates, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.CheckBoxFor(m => m.GracefullyHandleUnknownCandidates)
                @Html.ValidationMessageFor(m => m.GracefullyHandleUnknownCandidates, "")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
