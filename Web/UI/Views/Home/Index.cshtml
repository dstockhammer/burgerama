<toaster-container toaster-options="{'position-class': 'toast-top-left', 'time-out': 2500}"></toaster-container>

<section id="map" ng-controller="MapController">
    <input id="map-search-box" type="text" placeholder="Search for places..." ng-model="currentSearchTerm" />

    <div id="information-box" ng-if="selectedVenue != null">
        <div class="content">
            <h3>{{ selectedVenue.title }}</h3>
            <p>{{ selectedVenue.address }}</p>
        </div>
        <div class="buttons">
            <button type="button" class="btn btn-default" ng-click="clearSearch();"><span class="glyphicon glyphicon-remove"></span> Clear</button>
            <button type="button" class="btn btn-primary" ng-click="showAddVenueModal(selectedVenue);"><span class="glyphicon glyphicon-asterisk"></span> Suggest</button>
        </div>
    </div>

    <img id="venue-marker" class="draggable" src="~/Content/img/venue_marker.png" />

    <div id="map-canvas" ui-map="map" ui-options="mapOptions"
            ui-event="{'map-zoom_changed': 'setZoomMessage(map.getZoom())' }"></div>
</section>

<section id="organizer-space" class="workspace">
    <div id="organizer-switcher">
        <img id="venue-icon" class="switcher-icon switcher-icon-active" src="~/Content/img/venue_icon.png" />
        <img id="calendar-icon" class="switcher-icon" src="~/Content/img/calendar_icon.png" />
        <img id="settings-icon" class="switcher-icon" src="~/Content/img/settings_icon.png" />
    </div>

    <div ng-view></div>

    <div ng-controller="AccountController" style="margin: 15px;">
        <div id="badge-container" ng-show="signedIn">
            <img ng-src="{{ user.picture }}" alt="{{ user.nickname }}" />
        </div>

        <p ng-show="signedIn" style="color:#efefef">You are signed in as {{ user.email }}.</p>
        <p><button type="button" class="btn btn-default" ng-hide="signedIn" ng-click="showSignInModal();"><span class="glyphicon glyphicon-log-in"></span> Sign in</button></p>
        <p><button type="button" class="btn btn-default" ng-show="signedIn" ng-click="signOut();"><span class="glyphicon glyphicon-log-out"></span> Sign out</button></p>
    </div>

    <div ng-controller="VenueController">
        <ul id="venue-list" ng-repeat="venue in venues">
            <li><span>{{ venue.title }}</span></li>
        </ul>
    </div>
</section>
